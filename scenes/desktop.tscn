[sub_resource type="GDScript" id="GDScript_desktop"]
script/source = "extends Control

## Desktop scene - the fake desktop with boot sequence and games

@onready var boot_screen: Control = $BootScreen
@onready var desktop_layer: Control = $DesktopLayer
@onready var game_container: Control = $GameContainer
@onready var jlibina_icon: Control = $DesktopLayer/JlibinaIcon
@onready var powerplay_icon: Control = $DesktopLayer/PowerplayIcon
@onready var loading_bar: ProgressBar = $BootScreen/LoadingBar
@onready var tv_overlay: ColorRect = $TVOverlay
@onready var message_box: Control = $MessageBox
@onready var freeze_overlay: ColorRect = $FreezeOverlay
@onready var death_sfx: AudioStreamPlayer = $DeathSFX
@onready var desktop_sfx: AudioStreamPlayer = $DesktopSFX
@onready var jumpscare_sfx: AudioStreamPlayer = $JumpscareSFX
@onready var jumpscare_rect: TextureRect = $JumpscareOverlay

var powerplay_click_count: int = 0
var is_dragging: bool = false
var drag_offset: Vector2 = Vector2.ZERO
var dragged_icon: Control = null
var game_beaten: bool = false  # Track if player beat the game


func _ready() -> void:
	# Sync game_beaten from GameManager
	game_beaten = GameManager.game_beaten
	
	# Start with boot screen
	boot_screen.show()
	desktop_layer.hide()
	game_container.hide()
	tv_overlay.hide()
	message_box.hide()
	freeze_overlay.hide()
	jumpscare_rect.hide()
	
	# Show powerplay only if game was beaten
	if game_beaten:
		powerplay_icon.show()
	else:
		powerplay_icon.hide()
	
	# Prepare game container for zoom animation
	game_container.pivot_offset = game_container.size / 2.0
	
	# Start boot sequence
	_start_boot_sequence()


func _start_boot_sequence() -> void:
	loading_bar.value = 0
	
	# Play desktop sound during boot
	desktop_sfx.play()
	
	# Animate loading bar
	var tween = create_tween()
	tween.tween_property(loading_bar, 'value', 100.0, 0.5)
	tween.tween_callback(_on_loading_complete)


func _on_loading_complete() -> void:
	# Brief pause then TV-on effect
	await get_tree().create_timer(0.3).timeout
	_play_tv_on_effect()


func _play_tv_on_effect() -> void:
	# TV turn-on effect: white flash then vertical expand
	boot_screen.hide()
	tv_overlay.show()
	tv_overlay.color = Color.WHITE
	tv_overlay.modulate.a = 3.0
	
	# Show desktop behind
	desktop_layer.show()
	desktop_layer.modulate.a = 0
	
	var tween = create_tween()
	# Flash white
	tween.tween_property(tv_overlay, 'color', Color.BLACK, 0.1)
	# Expand from center line (simulate TV turning on)
	tween.tween_property(desktop_layer, 'modulate:a', 1.0, 0.15)
	tween.parallel().tween_property(tv_overlay, 'modulate:a', 0.0, 0.2)
	tween.tween_callback(_on_tv_on_complete)


func _input(event: InputEvent) -> void:
	# Handle drag release
	if event is InputEventMouseButton:
		if event.button_index == MOUSE_BUTTON_LEFT and not event.pressed:
			if is_dragging:
				is_dragging = false
				dragged_icon = null
	
	# Handle drag motion
	if event is InputEventMouseMotion and is_dragging and dragged_icon:
		dragged_icon.position = get_global_mouse_position() - drag_offset


func _start_drag(icon: Control) -> void:
	is_dragging = true
	dragged_icon = icon
	drag_offset = get_global_mouse_position() - icon.position


func _on_jlibina_icon_gui_input(event: InputEvent) -> void:
	if event is InputEventMouseButton:
		if event.button_index == MOUSE_BUTTON_LEFT:
			if event.double_click:
				_open_game()
			elif event.pressed:
				_start_drag(jlibina_icon)


func _on_powerplay_icon_gui_input(event: InputEvent) -> void:
	if event is InputEventMouseButton:
		if event.button_index == MOUSE_BUTTON_LEFT:
			if event.double_click:
				_on_powerplay_clicked()
			elif event.pressed:
				_start_drag(powerplay_icon)


func _on_powerplay_clicked() -> void:
	powerplay_click_count += 1
	
	if powerplay_click_count == 1:
		# First click - show 'no' message
		message_box.show()
	else:
		# Second click - freeze crash
		_trigger_freeze_crash()


func _trigger_freeze_crash() -> void:
	message_box.hide()
	
	# Show jumpscare
	jumpscare_rect.show()
	jumpscare_sfx.play()
	
	# Wait 2 seconds then quit
	await get_tree().create_timer(0.5).timeout
	get_tree().quit()


func _on_message_box_closed() -> void:
	message_box.hide()


func _on_tv_on_complete() -> void:
	tv_overlay.hide()
	DiscordManager.set_desktop()


func _open_game() -> void:
	# Stop desktop music
	desktop_sfx.stop()
	
	# Hide the icons
	jlibina_icon.hide()
	powerplay_icon.hide()
	
	# Windows-style zoom in animation
	game_container.scale = Vector2(0.1, 0.1)
	game_container.modulate.a = 0.5
	game_container.show()
	
	var tween = create_tween()
	tween.set_ease(Tween.EASE_OUT)
	tween.set_trans(Tween.TRANS_BACK)
	tween.tween_property(game_container, 'scale', Vector2(1.0, 1.0), 0.35)
	tween.parallel().tween_property(game_container, 'modulate:a', 1.0, 0.2)


func return_to_desktop() -> void:
	# Called when quit button is pressed in game
	game_container.hide()
	jlibina_icon.show()
	# Show powerplay only if game was beaten
	if game_beaten:
		powerplay_icon.show()
	# Resume desktop music
	desktop_sfx.play()


func unlock_powerplay() -> void:
	# Called from ending room when player returns
	game_beaten = true
"

