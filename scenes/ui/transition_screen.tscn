[sub_resource type="GDScript" id="GDScript_transition"]
script/source = "extends Control

## Screen transition with fade effect

signal transition_finished
signal screen_covered  # Emitted when fully black

@onready var label: Label = $Label
@onready var background: ColorRect = $Background

var covered_callback: Callable = Callable()


func play_transition(text: String, duration: float = 1.0, on_covered: Callable = Callable()) -> void:
	label.text = text
	covered_callback = on_covered
	modulate.a = 0.0
	show()
	
	var tween = create_tween()
	# Fade in to black
	tween.tween_property(self, 'modulate:a', 1.0, duration * 0.3)
	tween.tween_callback(_on_screen_covered)
	# Hold
	tween.tween_interval(duration * 0.4)
	# Fade out
	tween.tween_property(self, 'modulate:a', 0.0, duration * 0.3)
	tween.tween_callback(_on_transition_complete)


func _on_screen_covered() -> void:
	emit_signal('screen_covered')
	if covered_callback.is_valid():
		covered_callback.call()


func _on_transition_complete() -> void:
	hide()
	emit_signal('transition_finished')
"

